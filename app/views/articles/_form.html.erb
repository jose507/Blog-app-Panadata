<%= render 'shared/errors', obj: @article %>

<div class="row">
 <div class="col-xs-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Titulo %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :title, class: "form-control fuente", placeholder: "Titulo del articulo", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Descripción %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :text, rows: 10,  class: "form-control", placeholder: "Descripción del articulo" %>
   </div>
  </div>
    
    
  <div class="text-center ">
    <%= f.submit class: 'btn btn-success btn-lg boton' %>
    
    <%= link_to 'Atrás', articles_path, class:"btn btn-danger btn-lg  boton" %>


  <% end %>
  
  </div>    

</div>

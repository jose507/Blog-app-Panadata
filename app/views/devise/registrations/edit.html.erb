
<center><h2>Edit <%= resource_name.to_s.humanize %></h2></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<hr>
<div class="container bootstrap snippet">
    <div class="row">
  		<div class="col-sm-10"><h1><%= @user.nombre %></h1></div>
    </div>
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              

      <div class="text-center">
        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Sube una foto...</h6>
        <input type="file" class="text-center center-block file-upload">
      </div></hr><br>

               
          <div class="panel panel-default">
            <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
            <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
          </div>
          
          
          <ul class="list-group">
            <li class="list-group-item text-muted">Actividad del blog <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Articulos</strong></span> 125</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Comentarios</strong></span> 13</li>
            </ul> 
               
          
          
        </div><!--/col-3-->
    	<div class="col-sm-9">
    

              
          <div class="tab-content">
            <div class="tab-pane active" id="home">
                <hr>
                  <form class="form" action="##" method="get">
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              
                              <label for="first_name"><h4>Nombre completo</h4></label>
                              <%= f.text_field :nombre, :placeholder => "Ingresar su nombre", :class=>"form-control"  %>
                              
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="last_name"><h4>Fecha de nacimiento</h4></label>
                            <%= f.text_field :fecha_nacimiento, :class=>"form-control", :type=>"date" %>
                          </div>
                      </div>
          
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="phone"><h4>Ciudad</h4></label>
                              <%= f.text_field :ciudad, :placeholder => "Ingresar ciudad ", :class=>"form-control"  %>
                          </div>
                      </div>
          
                      <div class="form-group">
                          <div class="col-xs-6">
                             <label for="mobile"><h4>Cerveza favorita</h4></label>
                             <%= f.text_field :cerveza_fav, :placeholder => "Ingrese su cerveza favorita", :class=>"form-control"  %>
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="email"><h4>Email</h4></label>
                              <%= f.email_field :email, :placeholder => "Ingrese su email", :class=>"form-control"  %>
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="email"><h4>Contraseña actual</h4></label>
                              <%= f.password_field :current_password, :placeholder => "Ingrese su contraseña actual", :class=>"form-control"  %>
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="password"><h4>Nueva contraseña (dejarla vacía si no se desea)</h4></label>
                              <%= f.password_field :password, autocomplete: "new-password", :placeholder => "Ingrese su nueva contraseña", :class=>"form-control"   %>
                              <% if @minimum_password_length %>
                                <br />
                                <em><%= @minimum_password_length %> characters minimum</em>
                              <% end %>
                              
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="password2"><h4>Verificación de contraseña</h4></label>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Confirme su nueva contraseña", :class=>"form-control" %>
                              
                          </div>
                      </div>
                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                                <div class="actions">
                                <%= button_tag(:type => 'submit', :class => 'btn btn-lg btn-success') do %>
                                  Guardar <i class="glyphicon glyphicon-ok-sign"></i> 
                                <% end %>
                                <%= link_to 'Atrás', articles_path, class: "btn  btn-danger btn-lg" %>
                                </div>
                            </div>
                      </div>
              	</form>
              
              <hr>
              
             </div><!--/tab-pane-->
             
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->
  <% end %>



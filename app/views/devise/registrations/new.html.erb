<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<center><h2>Registarse</h2></center>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <divstyle=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">Crear una nueva cuenta</div>
            <div style="float:right; font-size: 85%; position: relative; top:-10px"><%= link_to "Iniciar Sesión", new_session_path(resource_name) %><br /></div>
        </div>  
        <div class="panel-body" >
        <div class="row justify-content-center">
        <div class="col-md-12">
        <div class="card">
        
        <article class="card-body">
        <form>
            <div class="form-row">
                <div class="col form-group">
                    <label>Nombre Completo </label>   
                    <%= f.text_field :nombre, autofocus: true, :class=>"form-control", :placeholder=>"Ingresar nombre completo"  %>
                </div> <!-- form-group end.// -->
                <div class="col form-group">
                    <label>Fecha de nacimiento</label>
                    <%= f.text_field :fecha_nacimiento, :class=>"form-control", :type=>"date" %>
                    
            
                </div> <!-- form-group end.// -->
            </div> <!-- form-row end.// -->
            <div class="form-group">
                <label>Email </label>
                <%= f.email_field :email, autocomplete: "email", :class=>"form-control", :placeholder=>"Ingresar Email" %>
                
            </div> <!-- form-group end.// -->
            
            <div class="form-row">
                <div class="form-group col-md-6">
                  <label>Ciudad</label>
                  <%= f.text_field :ciudad, autofocus: true, :class=>"form-control", :placeholder=>"Ingresar ciudad"  %>
                </div> <!-- form-group end.// -->
                <div class="form-group col-md-6">
                  <label>Cerveza </label>
                  <%= f.text_field :cerveza_fav, autofocus: true, :class=>"form-control", :placeholder=>"Ingresar cerveza favorita"  %>
                </div> <!-- form-group end.// -->
            </div> <!-- form-row.// -->
            <div class="form-group">
                <label>Contraseña</label>
                <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control", :placeholder=>"Contraseña" %>
            </div> <!-- form-group end.// -->  
            <div class="form-group">
                <div class="actions">
                        <%= f.submit "Registrarse", :class=>"btn btn-success btn-block" %>
                </div>
                
            </div> <!-- form-group// -->      
                                                      
        </form>
        </article> <!-- card-body end .// -->
        
        </div> <!-- card.// -->
        </div> <!-- col.//-->
        
        </div> <!-- row.//-->
        
        
        </div> 
        <!--container end.//-->
         </div>
    </div>




</div> 
<% end %>
    
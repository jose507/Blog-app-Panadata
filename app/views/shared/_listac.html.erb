<% obj.each do |comment| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="well well-lg">
          
          <div class="article-body">
            <%= truncate(comment.body, length: 100) %>
            <div class="article-meta-details">
            <small>Usuario: <%= comment.user.nombre if comment.user %>,
                      <%= time_ago_in_words(comment.created_at) %> ago,
                      last updated: <%= time_ago_in_words(comment.updated_at) %> ago</small>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  <% end %>